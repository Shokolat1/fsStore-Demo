<center>
    <h1>Editar Producto</h1>
    <br><br>
    <a href="/productos">
        <button type="button" class="btn btn-info mx-3">Ver productos</button>
    </a>
</center>
<br><br>

<form method="post" action="/editProd?orImg={{prod.aliasImg}}&id={{id}}" enctype="multipart/form-data">
    <fieldset>
        <div class="form-group">
            <label for="nom" class="col-sm-2 col-form-label">Nombre del Producto</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nom" name="nomProd" value="{{prod.nom}}">
            </div>
        </div>
        <div class="form-group">
            <label for="staticEmail" class="col-sm-2 col-form-label">Precio del Producto ($ MX)</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="staticEmail" name="precioProd" value="{{prod.precio}}">
            </div>
        </div>
        <div class="form-group">
            <label for="exampleTextarea" class="form-label mt-4">Descripci√≥n del Producto</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" name="descProd">{{prod.descrip}}</textarea>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label mt-4">Imagen del Producto</label>
            <input class="form-control" type="file" id="formFile" name="prodImg">
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" id="alias" name="alias">
            </div>
        </div>
        <br><br>
        <button type="submit" class="btn btn-primary">Editar</button>
    </fieldset>
</form>

<script>
    let a = document.querySelector('#formFile')
    let b = document.querySelector('#alias')
    a.addEventListener('change', (e) => {
        if (e.target.files[0]) {
            let x = a.files[0].name
            x = x.split('.')
            b.value = x[0]
        }
    })
</script>